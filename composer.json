{
    "name": "prestamosedin/fullstack-app",
    "description": "Sistema de Gestión de Préstamos - Fullstack PHP + React",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "PrestamosEdin\\": "backend/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php setup_heroku_database.php"
        ],
        "start": "php -S 0.0.0.0:8000 index.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}